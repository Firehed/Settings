" turn on syntax highlighting
:syntax on
set nocompatible

set noexpandtab
set softtabstop=4
set shiftwidth=4
set tabstop=4
"set shiftround
"set autoindent
"set smartindent
set showmatch
set hls "highlight search
set is  "incremental search
set ruler
set vb t_vb=
set number
set list
set listchars=tab:▸\ ,eol:¬

nnoremap j gj
nnoremap k gk

set wrap
set textwidth=79
set formatoptions=qrn1

