#!/usr/bin/env bash
# validate brew is installed

echo "Installing Homebrew utilities"
brew install \
    composer \
    fpp \
    gh `# Github CLI` \
    gpg \
    jq \
    kubectl \
    kustomize \
    npm \
    php \
    ripgrep \
    tree \
    yarn

echo "Installing Homebrew casks"
brew install --cask \
    docker \
    iterm2 \
    linearmouse `# Mouse scroll direction` \
    rectangle `# Window manager` \
    sequel-ace
